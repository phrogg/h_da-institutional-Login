{
  "manifest_version": 2,
  "name": "h_da institutional Login",
  "description": "Logging into Shibboleth via the h_da account was never so easy!",
  "version": "1.9",
  "author": "Phil Roggenbuck <ceo@roggstar.eu>",
 
  "icons": {
    "64": "icons/page-64.png",
    "128": "icons/page-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.sso.h-da.de/*","*://*.springer.com/*","*://*.statista.com/*","*://*.dl.acm.org/*","*://*.ieeexplore.ieee.org/*","*://*.ebscohost.com/*","*://*.emeraldinsight.com/*"],
      "js": ["injectme.js"]
    }
  ],
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ]
}
